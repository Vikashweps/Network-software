FROM python:3.12-slim

ENV PYTHONDONTWRITEBYTECODE=1 \
    PYTHONUNBUFFERED=1 \
    DEBIAN_FRONTEND=noninteractive

WORKDIR /app

RUN apt-get update && apt-get install -y --no-install-recommends curl \
    && rm -rf /var/lib/apt/lists/* \
    && pip install --no-cache-dir fastapi==0.128.7 uvicorn==0.40.0 pydantic

COPY service2.py .

EXPOSE 8224

CMD ["uvicorn", "service2:app", "--host", "0.0.0.0", "--port", "8224"]